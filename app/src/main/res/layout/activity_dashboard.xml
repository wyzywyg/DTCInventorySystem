<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Greeting -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello! userId ðŸ‘‹"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/greetingText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Total Items Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/totalItemsCard"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#EF5350"
        app:layout_constraintTop_toBottomOf="@id/dashboardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp">

            <TextView
                android:id="@+id/inventoryCenterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="188dp"
                android:text="Digital Transformation Center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="24"
                android:textColor="#FFFFFF"
                android:textSize="62sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.121"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inventoryCenterText" />

            <TextView
                android:id="@+id/inventoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory Total"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.131"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemCountText" />

            <TextView
                android:id="@+id/lastUpdatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="8dp"
                android:text="Updated: June 14, 2025"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Grid Stats -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/statGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:columnCount="2"
        app:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/totalItemsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:layout_margin="2dp">
            <include layout="@layout/stat_card" android:id="@+id/recentlyAddedCard"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:layout_margin="2dp">
            <include layout="@layout/stat_card" android:id="@+id/categoryCard"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:layout_margin="2dp">
            <include layout="@layout/stat_card" android:id="@+id/lastScanCard"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:layout_margin="2dp">
            <include layout="@layout/stat_card" android:id="@+id/locationCard"/>
        </FrameLayout>
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
